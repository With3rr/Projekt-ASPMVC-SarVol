
@model IEnumerable<SarVol.Models.Facility>
@{
    ViewData["Title"] = "Facilities";
}
<h1 style="text-align:center;margin-bottom:40px;">Our facilities</h1>

<div class="row pb-3 backgroundWhite">
    @foreach (var facility in Model)
    {
        <div class="col-lg-12 col-md-12 col-sm-12 container ">
            <div class="row">
                <div class="col-8" style="border:1px solid #008cba; border-radius: 2px;">
                    <div class="card" style="border:0px; padding-left:10px;">
                        <div style="text-align:center">
                            <p class="card-title "><b style="color:#2c3e50;font-size:1.2rem;">@facility.Name</b></p>
                        </div>

                        <h4>Adress:</h4>
                        <div>
                            <p class="card-title  text-primary " style="font-size: 1.2rem;"><b>@facility.StreetAdress</b></p>
                            <p class="card-title   text-primary" style="font-size: 1.2rem;"><b>@facility.PostalCode @facility.City</b></p>
                        </div>
                        <div style="margin-top:20px">

                        </div>
                        <h4>Opened:</h4>
                        <div style="text-align:left; ">
                            <p class="card-title text-primary" style="font-size: 1.2rem;">Poniedziałek – piątek<b> @facility.OpenedSaturday</b></p>
                            <p class="card-title text-primary" style="font-size: 1.2rem;">Sobota <b>@facility.OpenedWeek</b></p>

                        </div>
                    </div>
                </div>
                <div class="col-4 p-1 " style="border:1px solid #008cba; border-radius: 2px;">
                    <iframe src="@facility.MapUrl" style="border:0; width:100%; height:100%" allowfullscreen="" loading="lazy"></iframe>
                </div>

            </div>
            


        </div>
        <div style="margin:40px"></div>

    }



</div>
