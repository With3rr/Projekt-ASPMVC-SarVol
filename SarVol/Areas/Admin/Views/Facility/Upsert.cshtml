@model SarVol.Models.Facility
@{
    ViewData["Title"] = "Add facility";
    //var title = "Create Category";
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Id" hidden  />
    <div class="row p-3 border">
        @if (Model.Id != 0)
        {
            ViewData["Title"] = "Edit facility";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger">

                    </span>
                </div>
                <div class="col-4">
                    <label asp-for="StreetAdress"></label>
                </div>
                <div class="col-8">
                    <input asp-for="StreetAdress" class="form-control" />
                    <span asp-validation-for="StreetAdress" class="text-danger">

                    </span>
                </div>
                <div class="col-4">
                    <label asp-for="City"></label>
                </div>
                <div class="col-8">
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger">

                    </span>
                </div>
                <div class="col-4">
                    <label asp-for="PostalCode"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger">

                    </span>
                </div>
                <div class="col-4">
                    <label asp-for="PhoneNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger">

                    </span>
                </div>
                <div class="col-4">
                    <label asp-for="OpenedWeek"></label>
                </div>
                <div class="col-8">
                    <input asp-for="OpenedWeek" class="form-control" />
                    <span asp-validation-for="OpenedWeek" class="text-danger">

                    </span>
                </div>
                <div class="col-4">
                    <label asp-for="OpenedSaturday"></label>
                </div>
                <div class="col-8">
                    <input asp-for="OpenedSaturday" class="form-control" />
                    <span asp-validation-for="OpenedSaturday" class="text-danger">

                    </span>
                </div>
                <div class="col-4">
                    <label asp-for="MapUrl"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MapUrl" class="form-control" />
                    <span asp-validation-for="MapUrl" class="text-danger">

                    </span>
                </div>
            </div>
            <div class="form-group row" style="margin-top:20px">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.Id" />

                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}


